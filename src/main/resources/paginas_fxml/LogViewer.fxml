<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.nom.penha.bruno.kubeson.logs.gui.controller.LogViewerController">
    <children>
        <Label text="Logs Atuais" styleClass="title-label"/>
        <fx:include source="LogToolbar.fxml"/>
        <HBox spacing="10">
            <ListView fx:id="logListView" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
            <TextArea fx:id="jsonDetailArea" promptText="Detalhes JSON..." prefWidth="350"/>
        </HBox>
    </children>
</VBox>
